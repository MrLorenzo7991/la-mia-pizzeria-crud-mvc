@model Pizza

<div class="container my-5 shadow-lg p-3 mb-5 bg-body rounded">
    <div class="row mt-2 mb-4">
        <div class="col">
            <h1 class="fst-italic text-center">Modifica Pizza</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-9 col-12 mx-auto">
            <form asp-action="ModificaPizza" asp-controller="Pizza" asp-route-id="@Model.Id" method="post" class="row">
                @Html.AntiForgeryToken()
                <div class="col-md-9 my-2">
                    <span>Nome pizza:</span>
                    <input type="text" class="form-control" asp-for="Nome"/>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="col-md-3 my-2">
                    <span>Prezzo pizza:</span>
                    <input type="number" class="form-control" asp-for="Prezzo" step="0.01" min="0"/>
                    <span asp-validation-for="Prezzo" class="text-danger"></span>
                </div>
                <div class="col-12 my-2">
                    <span>Url Immagine Pizza:</span>
                    <input type="url" class="form-control" asp-for="UrlImmagine"/>
                    <span asp-validation-for="UrlImmagine" class="text-danger"></span>
                </div>
                <div class="col-12 my-2">
                    <span>Descrizione Pizza:</span>
                    <input type="text" class="form-control" asp-for="Descrizione"/>
                    <span asp-validation-for="Descrizione" class="text-danger"></span>
                </div>
                <div class="col-12 my-2">
                    <span>Ingredienti Pizza:</span>
                    <input type="text" class="form-control" asp-for="Ingredienti"/>
                    <span asp-validation-for="Ingredienti" class="text-danger"></span>
                </div>
                <div class="text-end my-2">
                    <input type="submit" class="btn btn-small btn-success" value="Aggiungi">
                </div>
            </form>
        </div>
    </div>
</div>