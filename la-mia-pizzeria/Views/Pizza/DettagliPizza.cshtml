@model Pizza

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli Pizza</h1>
            </div>
            <div>
                <img src="@Model.UrlImmagine" class="img-thumbnail">
            </div>
            <p>
                <strong>Nome Pizza:</strong>
                @Model.Nome
            </p>
            <p>
                <strong>Descrizione:</strong>
                @Model.Descrizione
            </p>
            <p>
                <strong>Prezzo:</strong>
                @Model.Prezzo €
            </p>
            <p>
                <strong>Ingredienti:</strong>
                @Model.Ingredienti
            </p>

        </div>
    </div>
</div>